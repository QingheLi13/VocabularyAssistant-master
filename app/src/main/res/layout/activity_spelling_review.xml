<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.limi.andorid.vocabularyassistant.acti.SpellingReviewActivity">


    <RelativeLayout
        android:id="@+id/layout_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/test_quit"
                android:layout_width="55dp"
                android:layout_height="35dp"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="0dp"
                android:background="@mipmap/quit" />

            <TextView
                android:id="@+id/test_spelling"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:text="Spelling Test"
                android:textColor="#000000"
                android:textSize="18sp" />
        </FrameLayout>

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progressBar_s"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="7.5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/layout_top"
        android:max="100"
        android:progress="10"
        android:progressDrawable="@drawable/progressbar"
        android:visibility="visible" />

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progressBar_s"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="54dp"
        android:orientation="horizontal"
        card_view:cardBackgroundColor="#ffffff"
        card_view:cardCornerRadius="5dp">

        <TextView
            android:id="@+id/meaningSpell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/word"
            android:gravity="center_vertical"
            android:text="n.药剂师，药店:an old word for someone whosejob was to prepare and sell medicines"
            android:textSize="20sp" />

    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/spellHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dip"
            android:text="Word length is n "
            android:textColor="#000000"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="35dip"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/spellText"
                android:layout_width="200dip"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:freezesText="false" />

            <Button
                android:id="@+id/spellShowAns"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@mipmap/answer2" />
        </LinearLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/next_button_r"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/test"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/test"
        android:layout_gravity="right|center_vertical"
        android:layout_marginBottom="48dp"
        android:background="@mipmap/next_button"
        android:text="Next"
        android:textSize="20sp" />
</RelativeLayout>
